<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".RegistroActivity">

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de usuario"
        android:textColorHint="#AAAAAA"
        android:textColor="#00FFAA"
        android:backgroundTint="#5C1A72"
        android:fontFamily="@font/press_start_2p"
        android:inputType="textPersonName"
        android:autofillHints="username"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/editClave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:textColorHint="#AAAAAA"
        android:textColor="#00FFAA"
        android:backgroundTint="#5C1A72"
        android:fontFamily="@font/press_start_2p"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/editNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:onClick="guardarUsuario"
        android:textColor="#00FFAA"
        android:background="@drawable/boton_pixel"
        android:fontFamily="@font/press_start_2p"
        android:textSize="10sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editClave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
